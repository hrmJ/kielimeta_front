{
  "name": "Digilang-portaali",
  "version": "1.0.0",
  "description": "Hakuportaali, joka listaa Turun yliopiston kielitieteelliset tutkimusaineistot ja tarjoaa käyttöliittymän aineistojen etsimiseksi erilaisten metatietojen (kuten aineistojen sisältämät kielet, aineiston laajuus) perusteella. ",
  "main": "index.js",
  "scripts": {
    "test:unit": "npx jest src/",
    "test:e2e": "yarn run test:e2e:all",
    "test:e2e:cur": "./scripts/e2e.test.cur.sh chrome",
    "test:e2e:quick": "./scripts/e2e.test_noserver.sh chrome",
    "test:e2e:debug": "./scripts/e2e_debug.sh chrome",
    "test:e2e:all": "yarn run test:e2e:chrome firefox",
    "test:e2e:chrome": "./scripts/e2e.test.sh chrome",
    "test:e2e:firefox": "./scripts/e2e.test.sh firefox",
    "start": "npx dotenv  -- webpack-dev-server --mode development --history-api-fallback",
    "build": "rm -rf dist/ && npx dotenv -- webpack --mode production --progress",
    "build-dev": "rm -rf dist/ && webpack --mode development ",
    "serve-pm2": "npx pm2 start node_modules/http-server/bin/http-server --name tlfrontend -- dist/",
    "serve": "npx pushstate-server -d dist/ -p 8080"
  },
  "jest": {
    "automock": false,
    "setupFiles": [
      "./setupJest.js"
    ]
  },
  "author": "Juho Härme",
  "license": "MIT",
